                        <DB_DRIVER_NAME>h2</DB_DRIVER_NAME>
                        <DB_CONNECTION_URL>jdbc:h2:mem:test;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE</DB_CONNECTION_URL>
                        <DB_USER_NAME>sa</DB_USER_NAME>
                        <DB_PASSWORD>sa</DB_PASSWORD>

