<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <module-name>clarksnut</module-name>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>API Resources</web-resource-name>
            <url-pattern>/api/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <!--Profile-->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Profile</web-resource-name>
            <url-pattern>/api/profile/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>

    <!--Users-->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Users API</web-resource-name>
            <url-pattern>/api/users/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>view-user</role-name>
        </auth-constraint>
    </security-constraint>

    <!--Spaces-->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Spaces POST</web-resource-name>
            <url-pattern>/api/spaces</url-pattern>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Spaces POST</web-resource-name>
            <url-pattern>/api/spaces</url-pattern>
            <http-method-omission>POST</http-method-omission>
        </web-resource-collection>
        <auth-constraint>
            <role-name>view-spaces</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Spaces API</web-resource-name>
            <url-pattern>/api/spaces/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>view-spaces</role-name>
        </auth-constraint>
    </security-constraint>

    <!--Namespaces-->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Namespaces</web-resource-name>
            <url-pattern>/api/namespaces/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>

    <!--Documents-->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Collector Resources</web-resource-name>
            <url-pattern>/api/documents/*</url-pattern>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
            <role-name>collector</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Collector Resources</web-resource-name>
            <url-pattern>/api/documents/*</url-pattern>
            <http-method-omission>POST</http-method-omission>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>

    <!--Request access-->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Request access</web-resource-name>
            <url-pattern>/api/request-access/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>KEYCLOAK</auth-method>
    </login-config>

    <security-role>
        <role-name>collector</role-name>
    </security-role>
    <security-role>
        <role-name>user</role-name>
    </security-role>
    <security-role>
        <role-name>view-user</role-name>
    </security-role>
    <security-role>
        <role-name>view-spaces</role-name>
    </security-role>
    <security-role>
        <role-name>admin</role-name>
    </security-role>
</web-app>
